#include <iostream>
#include "src/geometry.h"

using namespace std;

int main(int argc, char **argv) {
    cout << "Welcome to the Project Work Experiment" << endl;
    cout << "Please select an equation: \n";
    cout << "---------------------------\n";
    cout << "1. Solve area using apothem\n";
    cout << "2. Solve area using radius \n";
    cout << "3. Solve area using side   \n";
    cout << "4. Solve volume of Prism   \n";
    cout << "5. Solve volume of Cylinder\n";
    cout << "Selection:";
    int selection;
    cin >> selection;
    
    int sides;
    
    if (selection > 0 && selection < 4)
    {
      cout << "Enter # of sides:";
      cin >> sides;
    }
      
    cout << "Show work? (Y/N):";
    char cShowWork;
    cin >> cShowWork;
    
    bool bShowWork;
    if (cShowWork == 'Y' || cShowWork == 'y')
      bShowWork == true;
    else
      bShowWork == false;
    
    float answer;
    switch (selection)
    {
      case 1:
	cout << "Enter length of apothem:";
	float apothem;
	cin >> apothem;
	answer = FindAreaFromKnown(PLY_APOTHEM, apothem, sides, bShowWork);
	cout << "The area is:" << answer << endl;
	break;
      case 2:
	cout << "Enter length of radius:";
	float radius;
	cin >> radius;
	answer = FindAreaFromKnown(PLY_RADIUS, radius, sides, bShowWork);
	cout << "The area is:" << answer << endl;
	break;
      case 3:
	cout << "Enter length of side:";
	float side;
	cin >> side;
	answer = FindAreaFromKnown(PLY_SIDE, side, sides, bShowWork);
	cout << "The area is:" << answer << endl;
	break;
      case 4:
	cout << "Enter area of the base:";
	float base;
	cin >> base;
	cout << "Enter length of the height:";
	float height;
	cin >> height;
	answer = Prism_Volume(base, height, bShowWork);
	cout << "The volume is:" << answer << endl;
	break;
      case 5:
	cout << "Enter length of the base radius:";
	cin >> radius;
	cout << "Enter length of the height:";
	cin >> height;
	answer = Cylinder_Volume(radius, height, bShowWork);
	cout << "The volume is:" << answer << endl;
	break;
      default:
	break;
    }
    
    cout << endl;
    cin.clear(); // just to ensure there's no junk in the stream which
    cout << "Press Enter / Return to continue...\n";
    cin.ignore(1,0);
    
    return 0;
}
